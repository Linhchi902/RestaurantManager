<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dp_25"
        android:paddingVertical="@dimen/dp_5">

        <!--    <TextView-->
        <!--        android:text="Register"-->
        <!--        android:textSize="30sp"-->
        <!--        android:textColor="@color/colorPrimary"-->
        <!--        android:textStyle="italic"-->
        <!--        android:layout_marginBottom="@dimen/dp_30"-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content"/>-->

        <LinearLayout
            android:id="@+id/rt_center"
            android:layout_above="@+id/ln_footer"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/edt_name_ct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edt"
                android:hint="@string/hint_name_customer"
                android:padding="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:textSize="@dimen/size_16dp" />

            <EditText
                android:id="@+id/edt_phone_ct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_edt"
                android:hint="Phone"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/size_16dp" />

            <EditText
                android:id="@+id/edt_address_ct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_edt"
                android:hint="Address"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/size_16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_birth_ct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:background="@drawable/bg_edt"
                    android:clickable="false"
                    android:inputType="date"
                    android:hint="yyyy-MM-dd"
                    android:padding="@dimen/dp_5"
                    android:textSize="@dimen/size_16dp" />

                <ImageView
                    android:id="@+id/img_birth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="@dimen/dp_3"
                    android:src="@drawable/ic_calendar" />
            </LinearLayout>

            <EditText
                android:id="@+id/edt_user_name_ct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_edt"
                android:hint="User name"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/size_16dp" />

            <EditText
                android:id="@+id/edt_password_ct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_edt"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/size_16dp" />

            <EditText
                android:id="@+id/edt_confirm_password_ct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_edt"
                android:inputType="textPassword"
                android:hint="Confirm password"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/size_16dp" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40"
                android:background="@drawable/bg_btn"
                android:text="@string/register"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dp_20" />

            <TextView
                android:id="@+id/tv_or_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_login"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/or_sign_in_by"
                android:textColor="@color/text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_or_login"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/ic_call" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/ic_gg" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_already_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/you_have_an_account" />

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="@string/login_now"
                android:textColor="@color/color_forgot_pass" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>