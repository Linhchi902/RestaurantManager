<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_name_product_edit"
        android:text="@string/name_product"
        style="@style/text_style_edit"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edt_name_product_edit"
        style="@style/text_style_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_price_product_edit"
        android:text="@string/price_product"
        style="@style/text_style_edit"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edt_price_product_edit"
        style="@style/text_style_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>